.header {
    font-size: 90px;
    -unity-text-outline-color: rgba(255, 255, 255, 0);
    color: rgb(255, 255, 255);
    align-items: center;
}

.main-menu-btn {
    font-size: 28px;
    width: 400px;
    flex-grow: 0;
    background-color: rgba(130, 130, 130, 0);
    -unity-background-image-tint-color: rgba(255, 255, 255, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    -unity-font-definition: url("project://database/Assets/UI%20Assets/Font/IMFellDWPicaSC-Regular.ttf?fileID=12800000&guid=f65ce1e5d06b65444b3d2bf5f9db417a&type=3#IMFellDWPicaSC-Regular");
    margin-right: 25px;
    margin-left: 25px;
}

.main-menu-btn:hover {
    font-size: 34px;
    color: rgb(131, 255, 238);
    text-shadow: 0 0 6.2px rgba(131, 255, 238, 0);
    transition-duration: 0.3s;
    transition-timing-function: ease-in;
}
